% Hyperlinks in the pdf are wonderful, use them and make them look good too.
% Modify the link colors for the hyper links within the document
\RequirePackage{hyperref}
\definecolor{link}{rgb}{0,0,1.0}
\hypersetup{
  colorlinks, %
  citecolor = link,%
  filecolor = link,%
  linkcolor = link,%
  urlcolor  = link
}

